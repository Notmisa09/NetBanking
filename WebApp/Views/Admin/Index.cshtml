@using NetBanking.Core.Application.ViewModels.Users;
@model ICollection<UserViewModel>;

@{
    ViewData["Title"] = "Index";
}

<head>
    <script src="https://kit.fontawesome.com/7302c44b99.js" crossorigin="anonymous"></script>
</head>


<div class="container-fluid">
    <div>

<a class="btn btn-primary" asp-controller="Admin" asp-action="Register">Register a new Client</a>
        <div class="card mt-4">
            <div class="card-body">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Identification</th>
                            <th>Is Active</th>
                            <th>Roles</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td><img id="profileimage" src="@(!string.IsNullOrEmpty(user.ImageURL) ? user.ImageURL : "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQTnB8SJzsxM_KKbFNf-er2X-WiEdHMHXuz6w&usqp=CAU")" /></td>
                                <td>@user.FirstName</td>
                                <td>@user.LastName</td>
                                <td>@user.Email</td>
                                <td>@user.IdCard</td>
                                @if(user.IsActive == true)
                                {
                                    <td>Active</td>
                                }
                                else
                                {
                                    <td>Inactive</td>
                                }
                                <td>
                                    @foreach (var role in @user.Roles)
                                    {
                                       @role[0]
                                    }
                                </td>
                                <td>
                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                            data-bs-target="#myModal">
                                        <i class="fa-solid fa-pen-nib"></i>
                                    </button>
                                    <a class="btn btn-warning" asp-route-Id="@user.Id" asp-controller="Admin" asp-action="Edit"><i class="fa-solid fa-pencil fa-sm" style="color: #19191a;"></i></a>
                                    <a class="btn btn-danger" asp-route-Id="@user.Id" asp-controller="Admin" asp-action="Remove"><i class="fa-regular fa-trash-can"></i></a>
                                    <a class="btn btn-info" asp-route-Id="@user.Id" asp-controller="Admin" asp-action="ChangeStatus">Activate User</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    #profileimage {
        width: 50px;
        object-fit: cover;
        height: 50px;
        border-radius: 50%;
    }
</style>