@using NetBanking.Core.Application.ViewModels.Dashboard;
@model DashboardViewModel;

@{
    ViewData["Title"] = "Index";
}

<head>
    <script src="https://kit.fontawesome.com/7302c44b99.js" crossorigin="anonymous"></script>
</head>

<div class="container-fluid">
    <div class="col-10 offset-1">

        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Register a new patient</a>

        <div class="card mt-4">
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Photo</th>
                            <th>Name</th>
                            <th>Last Name</th>
                            <th>Identification</th>
                            <th>Allergies</th>
                            <th>Smoke</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>

                        <tr>
                            <td>@Model.AllPayments</td>
                            <td>@Model.AllPaymentsNumber</td>
                            <td>@Model.AssignedProduct</td>
                            <td>@Model.ActiveClients</td>
                            <td>@Model.InactiveClients</td>
                            <td>@Model.AllTransaction</td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>