@using NetBanking.Core.Application.ViewModels.Beneficiary;
@model List<BeneficiaryViewModel>;


<head>
    <link rel="stylesheet" href="~/css/tableadmin.css" />
    <script src="https://kit.fontawesome.com/7302c44b99.js" crossorigin="anonymous"></script>
</head>

<a class="btn btn-primary" asp-action="AddBeneficiary">Add Beneficiary</a>
@if (Model.Any())
{
    <div class="container-fluid">
        <div class="col-4 offset-4">
            <div class="card">
                <div class="card-body">
                    <table class="table">
                        <thead>
                        <td>
                            Beneficiario
                        </td>
                        <td>
                            Cuenta
                        </td>
                        <td>
                            Actions
                        </td>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.BeneficiaryUser.FirstName @item.BeneficiaryUser.LastName
                                    </td>
                                    <td>
                                        @item.BeneficiaryAccountId
                                    </td>
                                    <td>
                                        <a asp-route-id="@item.Id" asp-action="DeleteBeneficiary" class="btn btn-danger"><i class="fa-solid fa-user-minus"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="d-flex justify-content-center container text-white mt-5">
        <div class="card p-2 px-3 py-3">
            <div class="d-flex justify-content-between align-items-center"><img src="https://i.imgur.com/8ANWXql.png" width="20" height="20"><img src="https://i.imgur.com/SsTSozr.png" width="40"></div>
            <div class="mt-3"><span class="mr-3">1234 </span><span class="mr-3"> **** </span><span class="mr-3"> **** </span><span class="mr-2"><img src="~/Iconos/senal-de-advertencia.png" style="width: 13px; height: 13px;" /><img src="~/Iconos/senal-de-advertencia.png" style="width: 13px; height: 13px;" /><img src="~/Iconos/senal-de-advertencia.png" style="width: 13px; height: 13px;" /><img src="~/Iconos/senal-de-advertencia.png" style="width: 13px; height: 13px;" /></span></div>
            <div class="d-flex justify-content-between card-details mt-3 mb-3">
                <div class="d-flex flex-column"><span class="light">Beneficiaries</span><span><img src="~/Iconos/senal-de-advertencia.png" style="width: 15px; height: 15px;" /> No hay Beneficiarios</span></div>
                <div class="d-flex flex-row">
                    <div class="d-flex flex-column mr-3"><span class="light">Expired</span><span>00/00</span></div>
                    <div class="d-flex flex-column"><span class="light">CVV</span><span>000</span></div>
                </div>
            </div>
        </div>
    </div>
}

