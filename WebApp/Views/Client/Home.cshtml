@using NetBanking.Core.Application.ViewModels.Client;
@model GetAllProductsByClientViewModel;

<head>
    <link rel="stylesheet" href="~/css/tableadmin.css" />
</head>


<div class="container-fluid">
    @if (Model.Loans.Count != 0)
    {
        <h1>Prestamos</h1>
        <div class="row">
            @foreach (var item in Model.Loans)
            {
                <div class="col-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Código: @item.Id</h5>
                            <p class="card-text">Deuda: @item.Amount</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    @if (Model.SavingsAccounts.Count != 0)
    {
        <h1>Cuentas de ahorro</h1>
        <div class="row">
            @foreach (var item in Model.SavingsAccounts)
            {
                <div class="col-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Código: @item.Id</h5>
                            <p class="card-text">Monto: @item.Amount</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    @if (Model.CreditCards.Count != 0)
    {
        <h1>Tarjetas de Crédito</h1>
        <div class="row">
            @foreach (var item in Model.CreditCards)
            {
                <div class="col-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Código: @item.Id</h5>
                            <p class="card-text">Deuda: @item.Amount</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    @if (Model.CreditCards.Count == 0 && Model.SavingsAccounts.Count == 0 && Model.Loans.Count == 0)
    {
        <h1>No hay productos registrados</h1>
    }
</div>
